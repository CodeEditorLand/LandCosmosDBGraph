{
	"name": "vscode-cosmosdbgraph",
	"displayName": "Azure Cosmos DB Graph (deprecated)",
	"version": "0.0.1",
	"private": false,
	"description": "View Cosmos DB Graph databases in Azure.",
	"keywords": [
		"land"
	],
	"homepage": "HTTPS://GitHub.Com/CodeEditorLand/LandCosmosDBGraph#readme",
	"bugs": {
		"url": "HTTPS://GitHub.Com/CodeEditorLand/LandCosmosDBGraph/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+HTTPS://github.com/CodeEditorLand/LandCosmosDBGraph.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "🛬 Land —",
		"email": "Land@PlayForm.Cloud",
		"url": "HTTPS://Land.PlayForm.Cloud"
	},
	"type": "module",
	"main": "./main",
	"scripts": {
		"Document": "Document 'Source/**/*.ts'",
		"all": "npm i && npm run lint && npm test",
		"build": "tsc",
		"compile": "tsc -watch",
		"prepublishOnly": "Build 'Source/**/*.ts'",
		"webpack": "npm run build && gulp webpack-dev",
		"webpack-prod": "npm run build && gulp webpack-prod",
		"webpack-profile": "webpack --profile --json --mode production > webpack-stats.json && echo Use http://webpack.github.io/analyse to analyze the stats"
	},
	"contributes": {
		"commands": [],
		"configuration": {
			"properties": {
				"cosmosDB.graph.maxEdges": {
					"default": 500,
					"description": "Set a limit for number of edges displayed in a graph visualization",
					"type": "integer"
				},
				"cosmosDB.graph.maxVertices": {
					"default": 300,
					"description": "Set a limit for number of vertices displayed in a graph visualization",
					"type": "integer"
				},
				"cosmosDB.graph.viewSettings": {
					"default": [
						{
							"vertexSettings": [
								{
									"color": "auto",
									"displayProperty": [
										"name"
									],
									"showLabel": true
								},
								{
									"appliesToLabel": "person",
									"displayProperty": [
										"fullName",
										"lastName",
										"firstName",
										"name"
									]
								}
							]
						}
					],
					"description": "Settings for CosmosDB graph visualization.",
					"items": {
						"additionalProperties": false,
						"description": "A group of view settings",
						"properties": {
							"vertexSettings": {
								"description": "Groups of vertex display settings",
								"items": {
									"additionalProperties": false,
									"properties": {
										"appliesToLabel": {
											"description": "Specify a label value to restrict this settings group to only vertices with that label.",
											"type": "string"
										},
										"color": {
											"default": "auto",
											"description": "The vertex color, either 'auto', a CSS color name or a CSS RGB value (e.g., '#0088FF')",
											"pattern": "^(auto)|([a-zA-Z]+)|(#[0-9a-fA-F]{3})|(#[0-9a-fA-F]{6})$",
											"type": "string"
										},
										"displayProperty": {
											"description": "The vertex property to display for the text. The first one found to have a non-empty value on the vertex is used. The default is the vertex id.",
											"items": {
												"type": "string"
											},
											"type": "array"
										},
										"showLabel": {
											"default": true,
											"description": "If true, the label will be displayed along with the specified display property",
											"type": "boolean"
										}
									},
									"type": "object"
								},
								"type": "array"
							}
						},
						"type": "object"
					},
					"maxItems": 1,
					"type": "array"
				}
			},
			"title": "Cosmos DB"
		}
	},
	"activationEvents": [],
	"dependencies": {
		"d3": "7.9.0",
		"fs-extra": "11.2.0",
		"gremlin": "3.7.2",
		"socket.io": "4.7.5",
		"socket.io-client": "4.7.5"
	},
	"devDependencies": {
		"@playform/build": "0.0.7",
		"@playform/document": "0.0.6",
		"@types/d3": "7.4.3",
		"@types/fs-extra": "11.0.4",
		"@types/node": "20.12.10",
		"@types/socket.io": "3.0.1",
		"@types/socket.io-client": "1.4.36",
		"glob": "10.3.12"
	},
	"extensionDependencies": [
		"ms-azuretools.vscode-cosmosdb",
		"ms-vscode.azure-account"
	],
	"publishConfig": {
		"access": "public"
	},
	"icon": "resources/cosmos.png",
	"galleryBanner": {
		"color": "#3c3c3c",
		"theme": "dark"
	},
	"preview": true,
	"aiKey": "AIF-d9b70cd4-b9f9-4d70-929b-a071c400b217"
}
